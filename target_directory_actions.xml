<project name="potatosql" default="unzip, run">
    <property name="version" value="50"/>        
    <target name="1. unzip">
        <!-- unzip files -->
        <unzip src="target/${ant.project.name}-${version}-app.zip" dest="target" overwrite="true"/>                                        
    </target>
    <target name="2. run">
        <!-- run application -->                
        <java jar="target/${ant.project.name}-${version}/${ant.project.name}-${version}.jar" fork="true" failonerror="true" maxmemory="128m">
            <classpath>
                <pathelement location="target/${ant.project.name}-${version}/${ant.project.name}-${version}.jar"/>                
            </classpath>
        </java>
    </target>    
</project>
